@model IEnumerable<stunning_robot_HR.Models.DayOffRequest>

@{
    ViewData["Title"] = "Index";
}

<h1>Index-- view as staff</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDayOfTimeRequest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDayOfTimeOffRequest)
            </th>
            <th>
                <h5>this number should only reflect what has been entered by Admin</h5>
                @Html.DisplayNameFor(model => model.TotalNumberOfAvailableDaysOff)
            </th>
            <th>
                <h5>this number should only reflect what has been entered by Admin</h5>
                @Html.DisplayNameFor(model => model.TotalNumberOfHoursWorked)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDayOfTimeRequest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDayOfTimeOffRequest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalNumberOfAvailableDaysOff)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalNumberOfHoursWorked)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RequestId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RequestId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RequestId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
